# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[src/assets/*]
indent_size = none
indent_style = none
insert_final_newline = none
trim_trailing_whitespace = none

[*.md]
max_line_length = off
trim_trailing_whitespace = false
